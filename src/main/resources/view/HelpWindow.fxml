<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.ScrollPane?>
<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11"
         xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@Fonts.css" />
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <ScrollPane hvalue="1.0" prefHeight="557.0" vvalue="1.0">
        <VBox>
          <ImageView fx:id="commandUsages">
            <Image url="@/images/command_summary.png" backgroundLoading="true"/>
          </ImageView>

          <HBox alignment="CENTER">
            <opaqueInsets>
              <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
            </opaqueInsets>
            <padding>
              <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
            </padding>

            <Label fx:id="helpMessage" text="Label">
              <HBox.margin>
                <Insets right="5.0"/>
              </HBox.margin>
            </Label>

            <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
              <HBox.margin>
                <Insets left="5.0"/>
              </HBox.margin>
            </Button>
          </HBox>
        </VBox>
      </ScrollPane>
    </Scene>
  </scene>
</fx:root>
